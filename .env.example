# REPL-ay Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DB_PASSWORD=replay_secure_password_2024
DATABASE_URL=postgresql://replay_user:replay_secure_password_2024@localhost:5432/replay_db

# Redis Configuration (optional)
REDIS_PASSWORD=redis_secure_password_2024
REDIS_URL=redis://:redis_secure_password_2024@localhost:6379

# NextAuth Configuration
NEXTAUTH_URL=https://localhost:3000
NEXTAUTH_SECRET=your-super-secret-nextauth-secret-here-change-this-in-production

# Google OAuth Configuration
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret

# Application Configuration
NEXT_PUBLIC_APP_URL=https://localhost:3000
NODE_ENV=development

# SSL/HTTPS Configuration
ENABLE_HTTPS=true
HTTPS_KEY_PATH=./certs/localhost-key.pem
HTTPS_CERT_PATH=./certs/localhost.pem

# API Keys (add as needed)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Stripe Configuration (for payments)
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Email/Marketing Configuration
MAILERLITE_API_KEY=your-mailerlite-api-key

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Analytics (optional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# Security
ENCRYPTION_KEY=your-32-character-encryption-key-here